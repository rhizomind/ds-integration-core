<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="https://maven.apache.org/SETTINGS/1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0 https://maven.apache.org/xsd/settings-1.2.0.xsd"
>
    <localRepository>/deploy-sphere/build-cache/m2/repository</localRepository>
    <pluginGroups>
        <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
        <pluginGroup>com.solidify</pluginGroup>
        <pluginGroup>org.jacoco</pluginGroup>
    </pluginGroups>
    <servers>
        <server>
            <id>accuratus-maven-central-proxy</id>
            <username>${env.JENKINS_USER_LOGIN}</username>
            <password>${env.JENKINS_USER_PASSWORD}</password>
        </server>
        <server>
            <id>accuratus-maven-releases</id>
            <username>${env.JENKINS_USER_LOGIN}</username>
            <password>${env.JENKINS_USER_PASSWORD}</password>
        </server>
        <server>
            <id>accuratus-maven-snapshots</id>
            <username>${env.JENKINS_USER_LOGIN}</username>
            <password>${env.JENKINS_USER_PASSWORD}</password>
        </server>
        <server>
            <id>accuratus-maven-fortuna-releases</id>
            <username>${env.JENKINS_USER_LOGIN}</username>
            <password>${env.JENKINS_USER_PASSWORD}</password>
        </server>
    </servers>
    <mirrors>
        <mirror>
            <id>accuratus-maven-central-proxy</id>
            <url>${env.MAVEN_CENTRAL_PROXY}</url>
            <mirrorOf>central</mirrorOf>
            <name>Accuratus Maven Repository</name>
        </mirror>
    </mirrors>
    <profiles>
        <profile>
            <id>solidify</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>accuratus-maven-snapshots</id>
                    <name>Acuratus Maven Snapshots</name>
                    <releases>
                        <enabled>false</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                        <checksumPolicy>fail</checksumPolicy>
                    </snapshots>
                    <url>http://nexus.accuratus.solidify.pl/repository/maven-snapshots/</url>
                    <layout>default</layout>
                </repository>
                <repository>
                    <id>accuratus-maven-releases</id>
                    <name>Acuratus Maven Releases</name>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                        <checksumPolicy>fail</checksumPolicy>
                    </snapshots>
                    <url>http://nexus.accuratus.solidify.pl/repository/maven-releases/</url>
                    <layout>default</layout>
                </repository>
            </repositories>
            <properties>
                <judge-d.judgeDLocation>${env.JUDGE_D_HOST_URL}</judge-d.judgeDLocation>
                <nvd.db.jdbc-url>${env.DEPENDENCY_CHECK_DB_URL}</nvd.db.jdbc-url>
                <nvd.db.user>${env.DEPENDENCY_CHECK_USERNAME}</nvd.db.user>
                <nvd.db.password>${env.DEPENDENCY_CHECK_PASSWORD}</nvd.db.password>
            </properties>
        </profile>
    </profiles>
</settings>
